<h2>Media Spotlight: <%= @spotlight.title %></h2>
<ul>
  <li># votes - #description</li>
</ul>

<section>
  <h2>Top Movies</h2>
  <ul>
    <% @top_movies.each do |movie| %>
    <li>
      <%= link_to movie.title, work_path(movie.id) %>
    </li>
    <li>
      <%="by #{movie.creator}"%>
    </li>
    <li>
      <%="#{movie.votes} votes"%>
    </li>
    <% end %>
  </ul>
</section>

